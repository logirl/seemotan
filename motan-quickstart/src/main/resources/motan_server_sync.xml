<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://api.weibo.com/schema/motan
            http://api.weibo.com/schema/motan.xsd">

    <!-- 服务实现bean -->
    <bean id="serviceImpl" class="cc.logirl.motan.sync.FooServiceImpl"/>
    <!-- 导出服务 -->
    <motan:service interface="cc.logirl.motan.sync.FooService" ref="serviceImpl" export="8002"/>

</beans>